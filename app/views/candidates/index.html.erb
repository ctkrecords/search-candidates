
<div class="container">
  <div class="row">
    <div class="col">
      <p id="notice"><%= notice %></p>

      <h1 class="text-white">Candidatos</h1>

      <table class="table table-striped table-dark">
        <thead>
          <tr>
            <th scope="col">Nombre</th>
            <th scope="col">Celular</th>
            <th scope="col">Fecha de nacimiento</th>
            <th scope="col">Reclutador</th>
            <th scope="col"></th>
          </tr>
        </thead>

        <tbody>
          <% @candidates.each do |candidate| %>
            <tr>
              <td><%= candidate.name %></td>
              <td><%= candidate.cellphone %></td>
              <td><%= candidate.birth_date %></td>
              <td><%= candidate.user.name %></td>
              <td>
                <div class="btn-group" role="group">
                  <%= link_to 'Ver', candidate, class: "btn btn-success" %>
                  <%= link_to 'Editar', edit_candidate_path(candidate), class: "btn btn-primary" %>
                  <%= link_to 'Eliminar', candidate, method: :delete, data: { confirm: '¿Está seguro que desea eliminar el candidato?' }, class: "btn btn-danger" %>
                </div>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>

      <br>

      <%= link_to 'Agregar nuevo candidato', new_candidate_path, class: "btn btn-info" %>

    </div>
  </div>
</div>
