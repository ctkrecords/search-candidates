<div class="container">
  <%= form_with(model: candidate, local: true) do |form| %>
    <% if candidate.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(candidate.errors.count, "error") %> prohibited this candidate from being saved:</h2>

        <ul>
        <% candidate.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>
  <div class="row">
    <div class="col-6">
      <div class="form-group">
        <%= form.label :name, "Nombre" %>
        <%= form.text_field :name, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= form.label :cellphone, "Celular" %>
        <%= form.text_field :cellphone, class: "form-control" %>
      </div>

      <div class="form-group dropdown">
        <%= form.label :birth_date, "Fecha de nacimiento" %>
        <%= form.date_select :birth_date,
                              {
                                order: [:day, :month, :year],
                                start_year: Date.today.year - 10,
                                end_year: Date.today.year - 100
                              },
                                {required: true, class: "btn btn-secondary"} %>
      </div>

      <div class="form-group dropdown">
        <%= form.label :genre, "Género" %>
        <%= form.select(:genre, Candidate::GENRE_LIST, class: "btn btn-secondary") %>
      </div>

      <div class="form-group">
        <%= form.label :education_level, "Nivel Educativo" %>
        <%= form.select(:education_level, Candidate::EDUCATION_LEVEL) %>
      </div>

      <div class="form-group">
        <%= form.label :status, "Estatus" %>
        <%= form.select(:status, Candidate::STATUS) %>
      </div>

      <div class="form-group">
        <%= form.label :careers, "Carrera" %>
        <%= form.select(:careers, Candidate::CAREERS) %>
      </div>


      <div class="form-group">
        <%= form.label :languages, "Idiomas" %>
        <%= form.select(:languages, Candidate::LANGUAGES) %>
      </div>

      <div class="form-group">
        <%= form.label :performance_areas, "Áreas de desempeño" %>
        <%= form.select(:performance_areas, Candidate::PERFORMANCE_AREAS) %>
      </div>

      <div class="form-group">
        <%= form.label :industry, "Industria" %>
        <%= form.select(:industry, Candidate::INDUSTRY) %>
      </div>

      <div class="form-group">
        <%= form.label :regional_candidate, "Candidato regional" %>
        <%= form.select(:regional_candidate, Candidate::REGIONAL_CANDIDATE) %>
      </div>

      <div class="form-group">
        <%= form.label :civil_status, "Estado civil" %>
        <%= form.select(:civil_status, Candidate::CIVIL_STATUS) %>
      </div>

      <div class="form-group">
        <%= form.label :skills, "Skills" %>
        <%= form.select(:skills, Candidate::SKILLS) %>
      </div>

      <div class="form-group">
        <%= form.label :email, "Email" %>
        <%= form.email_field :email %>
      </div>

      <div class="form-group">
        <%= form.label :actual_company, "Compañía actual" %>
        <%= form.text_field :actual_company %>
      </div>

      <div class="form-group">
        <%= form.label :recruitment_source, "Fuente de reclutamiento" %>
        <%= form.select(:recruitment_source, Candidate::RECRUITMENT_SOURCE) %>
      </div>

      <div class="form-group">
        <%= form.label :relocate, "Dispuesto a reubicarse" %>
        <%= form.select(:relocate, Candidate::RELOCATE) %>
      </div>

      <div class="form-group">
        <%= form.label :actual_salary, "Salario actual / Último salario (USD)" %>
        <%= form.text_field :actual_salary, required: true %>
      </div>

      <div class="form-group">
        <%= form.label :variable_salary, "Salario variable (USD)" %>
        <%= form.text_field :variable_salary %>
      </div>

    </div>

    <div class="col-6">

      <div class="form-group">
        <%= form.label :wage_aspiration, "Aspiración salarial (USD)" %>
        <%= form.text_field :wage_aspiration %>
      </div>

      <div class="form-group">
        <%= form.label :position, "Posición / Cargo Actual" %>
        <%= form.text_field :position %>
      </div>

      <div class="form-group">
        <%= form.label :comparative_chart, "Datos cuadro comparativo" %>
        <%= form.text_area :comparative_chart %>
      </div>

      <div class="form-group">
        <%= form.label :specific_benefit, "Beneficio específico" %>
        <%= form.text_area :specific_benefit %>
      </div>

      <div class="form-group">
          <%= form.label :general_benefits, "Beneficios generales" %>
          <%= form.text_area :general_benefits %>
      </div>

      <div class="form-group">
        <%= form.label :general_comments, "Comentarios generales" %>
        <%= form.text_area :general_comments %>
      </div>

      <div class="form-group">
        <%= form.label :address, "Dirección" %>
        <%= form.text_area :address %>
      </div>

      <div class="form-group">
        <%= form.label :conditions_to_move, "Condiciones para moverse" %>
        <%= form.text_area :conditions_to_move %>
      </div>

      <div class="form-group">
        <%= form.label :telephone, "Teléfono de casa" %>
        <%= form.text_field :telephone %>
      </div>

      <div class="form-group">
        <%= form.label :interview_date, "Fecha de entrevista" %>
        <%= form.date_select :interview_date, {order: [:day, :month, :year], start_year: Date.today.year, end_year: Date.today.year - 20}, {required: true} %>
      </div>

      <div class="form-group">
        <%= form.label :nationality, "Nacionalidad" %>
        <%= form.text_field :nationality %>
      </div>

      <div class="actions">
        <%= form.submit %>
      </div>
    </div>
  </div>
</div>

<% end %>
